<h2>新規投稿</h2>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="new-post">
        <%= form_with model: @post, url: public_posts_path, method: :post do |f| %>
        <div class="error-message">
          <%= render 'public/posts/error', post: @post %>
        </div>
        <div class="form-group row">
          <div class="col-md-6 text-center fw-bold">
            <%= f.label :image %>
          </div>
          <div class="col-md-4">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-6 text-center fw-bold">
            <%= f.label :place %>
          </div>
          <div class="col-md-4">
            <%= f.text_field :place %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-6 text-center fw-bold">
            <%= f.label :explaination %>
          </div>
          <div class="col-md-4">
            <%= f.text_area :explaination %>
          </div>
        </div>
        <div class="form-group">
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div>
              <%= tag.label class: 'form-check-label' do %>
                <%= tag.check_box class: 'form-check-input' %>
                #<%= tag.text %>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= f.submit "投稿", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="user-info">
        <%= render 'public/users/sidebar', user: current_user %>
      </div>
    </div>
  </div>
</div>


