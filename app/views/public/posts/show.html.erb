<!--投稿詳細-->
<h2>投稿詳細</h2>
<div class="row">
  <div class="col-md-8">
    <div class="post">
      <%= render "post", post: @post %>
    </div>
    <div class="comment">
      <!--コメント投稿-->
      <div class="new-comment">
        <%= render 'public/post_comments/form', post: @post, comment: @comment %>
      </div>
      <!--コメント数-->
      <div class="post_comments-counter">
        <%= render 'public/post_comments/counter', post: @post %>
      </div>
      <!--コメント一覧-->
      <div id="comments_area">
        <%= render 'public/post_comments/post_comments', post: @post %>
      </div>
    </div>
  </div>
  <!--サイドバー-->
  <div class="col-md-4">
    <div class="user-info">
      <%= render 'public/users/sidebar', user: current_user %>
    </div>
  </div>
</div>


