<h2>投稿詳細</h2>
<!--投稿詳細-->
<div class="row">
  <div class="col-md-8">
    <div>
      <%= link_to public_post_path(@post) do %>
        <%= image_tag @post.get_image(250,250) %>
      <% end %>
      <!--いいねボタン。ログインしているときはいいねできる-->
      <% if user_signed_in? %>
        <p id="like_buttons_<%= @post.id %>">
          <%= render "public/likes/like", post: @post %>
        </p>
      <% else %>
        <i class="fas fa-thumbs-up fa-2x"></i>&emsp;<%= @post.likes.count %><!--ログインしていないときはいいねカウントのみ-->
      <% end %>
      <p><%= localize @post.created_at, format: :short %></p>
      <p>
        <%= link_to public_user_path(@post.user) do %>
          <%= image_tag @post.user.get_profile_image(40,40) %>
          <%= @post.user.name %>
        <% end %>
      </p>
      <p><%= @post.place %></p>
      <p><%= @post.explaination %></p>
      <% if @post.user == current_user %>
        <%= link_to "編集", edit_public_post_path(@post) %>
        <%= link_to "削除", public_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' } %>
      <% end %>
    </div>
    <!--コメント数-->
    <div class="post_comments-counter">
      <%= render 'public/post_comments/counter', post: @post %>
    </div>
    <!--コメント投稿-->
    <div class="new-comment">
      <%= render 'public/post_comments/form', post: @post, comment: @comment %>
    </div>
    <!--コメント一覧-->
    <div id="comments_area">
      <%= render 'public/post_comments/post_comments', post: @post %>
    </div>
  </div>
  <!--サイドバー-->
  <div class="col-md-4">
    <p><%= link_to "新規投稿", new_public_post_path %></p>
    <%= render 'public/users/sidebar', user: current_user %>
  </div>
</div>


