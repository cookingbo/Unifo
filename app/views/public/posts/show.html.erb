<h2>投稿詳細</h2>
<!--投稿詳細-->
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="post">
        <div class="post-image">
          <p class="post-image-item">
            <%= link_to public_post_path(@post) do %>
              <%= image_tag @post.get_image(250,250), class: "rounded" %>
            <% end %>
          </p>
        <!--いいねボタン。ログインしているときはいいねできる-->
          <% if user_signed_in? %>
          <div class="like-time">
            <p id="like_buttons_<%= @post.id %>">
              <%= render "public/likes/like", post: @post %>
            </p>
          </div>
          <% else %>
          <div class="like-time">
            <%= localize @post.created_at, format: :short %>&emsp;
            <i class="fas fa-thumbs-up fa-2x"></i>&emsp;<%= @post.likes.count %>いいね<!--ログインしていないときはいいねカウントのみ-->
          </div>
          <% end %>
        </div>
        <div class="post-info">
          <p>
          <%= link_to public_user_path(@post.user) do %>
            <%= image_tag @post.user.get_profile_image(30,30), class: "rounded-circle" %>
            <%= @post.user.name %>
          <% end %>
          </p>
          <p class="post-info-item"><%= @post.place %></p>
          <p><%= @post.explaination %></p>
          <p>
          <% @post.tags.each do |tag| %>
            #<%= tag.name %>
          <% end %>
          </p>
        </div>
        <div class="edit-delete">
        <% if @post.user == current_user %>
          <%= link_to edit_public_post_path(@post) do %>
            <i class="far fa-edit fa-lg"></i>&nbsp;
          <% end %>
          <%= link_to public_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' } do %>
            <i class="far fa-trash-alt fa-lg"></i>
          <% end %>
        <% end %>
        </div>
      </div>
      <div class="comment">
        <!--コメント投稿-->
        <div class="new-comment">
          <%= render 'public/post_comments/form', post: @post, comment: @comment %>
        </div>
        <!--コメント数-->
        <div class="post_comments-counter">
          <%= render 'public/post_comments/counter', post: @post %>
        </div>
        <!--コメント一覧-->
        <div id="comments_area">
          <%= render 'public/post_comments/post_comments', post: @post %>
        </div>
      </div>
    </div>
    <!--サイドバー-->
    <div class="col-md-4">
      <div class="user-info">
        <%= render 'public/users/sidebar', user: current_user %>
      </div>
    </div>
  </div>
</div>


