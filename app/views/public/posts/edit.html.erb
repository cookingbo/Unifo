<h2>投稿編集</h2>
<!--投稿編集-->
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="edit-post">
        <%= form_with model: @post, url: public_post_path(@post), method: :patch do |f| %>
        <div class="error-message">
          <%= render 'public/posts/error', post: @post %>
        </div>
        <div class="form-group row">
          <div class="col-md-6 text-center fw-bold">
            <%= f.label :image %>
          </div>
          <div class="col-md-4">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-6 text-center fw-bold">
            <%= f.label :place %>
          </div>
          <div class="col-md-4 d-grid">
            <%= f.text_field :place, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-md-6 text-center fw-bold">
            <%= f.label :explaination %>
          </div>
          <div class="col-md-4 d-grid">
            <%= f.text_area :explaination, class: "form-control" %>
          </div>
        </div>
        <div class="checkbox">
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class="checkbox-item">
              <%= tag.label class: 'form-check-label' do %>
                <%= tag.check_box class: 'form-check-input' %>
                #<%= tag.text %>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= f.submit "更新", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="sidebar">
        <div class="user-info">
          <%= render 'public/users/sidebar', user: current_user %>
        </div>
      </div>
    </div>
  </div>
</div>

