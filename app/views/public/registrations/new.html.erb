<h2>新規登録</h2>
<!--会員新規登録ページ-->
<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :profile_image %><br />
    <%= f.file_field :profile_image %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :university %><br />
    <%= f.text_field :university %>
  </div>

  <div class="form-group">
    <%= f.label :area %><br />
    <%= f.select :area, User.areas.keys, class: "area" %>
  </div>

  <div class="form-group">
    <%= f.label :country_code %><br />
    <%= f.country_select :country_code %>
  </div>

  <div class="form-group">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
