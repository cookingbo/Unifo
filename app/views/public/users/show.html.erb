<h2>マイページ</h2>
<!--投稿者の投稿一覧-->
<% @posts.each do |post| %>
  <div>
    <%= image_tag post.get_image(200,200) %>
    <!--いいねボタン。ログインしているときはいいねできる-->
    <% if user_signed_in? %>
      <p id="like_buttons_<%= post.id %>">
        <%= render "public/likes/like", post: post %>
      </p>
    <% else %>
      <i class="fas fa-thumbs-up fa-lg"></i><%= post.likes.count %><!--ログインしていないときはいいねカウントのみ-->
    <% end %>
    
    <p><%= post.place %></p>
    <p><%= post.explaination %></p>
    <% if post.user == current_user %>
      <%= link_to "編集", edit_public_post_path(post.id) %>
      <%= link_to "削除", public_post_path(post.id), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    <% end %>
  </div>
<% end %>

<!--サイドバー-->
<div>
  <p><%= link_to "新規投稿", new_public_post_path %></p>
  <%= render 'public/posts/sidebar', user: @user %>
</div>