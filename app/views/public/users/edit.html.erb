<!--会員情報編集ページ-->
<h2>プロフィール設定</h2>
<%= form_with model: @user, url: public_user_path(@user), method: :patch do |f| %>

  <div class="field">
    <%= f.label :profile_image %><br />
    <%= f.file_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :university %><br />
    <%= f.text_field :university %>
  </div>

  <div class="field">
    <%= f.label :area %><br />
    <%= f.select :area, User.areas.keys, class: "area" %>
  </div>

  <div class="field">
    <%= f.label :country_code %><br />
    <%= f.country_select :country_code %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction %>
  </div>

  <%= f.submit "更新" %>
<% end %>