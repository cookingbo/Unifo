<h2>NEW!</h2>
<!--トップページの投稿一覧-->
<div class="row">
  <div class="col-md-8">
    <% @posts.each do |post| %>
      <div class="position-relative">
        <div>
          <p>
            <%= link_to public_post_path(post) do %>
              <%= image_tag post.get_image(250,250) %>
            <% end %>
          </p>
          <!--いいねボタン。ログインしているときはいいねできる-->
          <% if user_signed_in? %>
            <p id="like_buttons_<%= post.id %>">
              <%= render "public/likes/like", post: post %>
            </p>
          <% else %>
            <i class="far fa-thumbs-up fa-2x"></i>&emsp;<%= post.likes.count %><!--ログインしていないときはいいねカウントのみ-->
          <% end %>
          <p><%= localize post.created_at, format: :short %></p>
        </div>
        <div>
          <p>
            <%= link_to public_user_path(post.user), class: "text-decoration-none" do %>
              <%= image_tag post.user.get_profile_image(30,30), class: "rounded-circle" %>
              <%= post.user.name %>
            <% end %>
          </p>
          <p><%= post.place %></p>
          <p><%= post.explaination %></p>
          <p>
            <%= render 'public/post_comments/counter', post: post %>
            <%= link_to "コメントする", public_post_path(post.id), class: "text-decoration-none" %>
          </p>
          <div class="position-absolute top-0 end-0">
            <% if post.user == current_user %>
              <%= link_to edit_public_post_path(post.id) do %>
                <i class="far fa-edit fa-lg"></i>
              <% end %>
              <%= link_to public_post_path(post.id), method: :delete, data: { confirm: '本当に削除しますか？' } do %>
                <i class="far fa-trash-alt fa-lg"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <p>タグ検索欄</p>
  </div>
</div>

