<h2>新着投稿</h2>
<!--トップページの投稿一覧-->
<% @posts.each do |post| %>
<div>
  <%= image_tag post.get_image(200,200) %>
  <%= link_to post.user.full_name, public_user_path(post.user_id) %>
  <%= post.place %>
  <%= post.explaination %>
  <% if post.user == current_user %>
    <%= link_to "編集", edit_public_post_path(post.id) %>
    <%= link_to "削除", public_post_path(post.id), method: :delete, data: { confirm: '本当に削除しますか？' } %>
  <% end %>
</div>
<!--ログインしているときはいいねできる-->
<% if user_signed_in? %>
  <% if post.liked_by?(current_user) %>
    <%= link_to public_post_likes_path(post.id), method: :delete do %>
      <i class="fas fa-thumbs-up fa-lg"></i>
    <% end %>
      <%= post.likes.count %> いいね
  <% else %>
    <%= link_to public_post_likes_path(post.id), method: :post do %>
      <i class="far fa-thumbs-up fa-lg"></i>
    <% end %>
      <%= post.likes.count %> いいね
  <% end %>
<% else %>
  <%= post.likes.count %> いいね<!--ログインしていないときはいいねカウントのみ-->
<% end %>


<div>
  <%= post.user.university %>
  <%= post.user.area %>
  <%= post.user.country %>
  <%= post.user.introduction %>

</div>
<% end %>