  <% if post.liked_by?(current_user) %> <!--current_userにlikeされた場合-->
    <%= localize post.created_at, format: :short %>&emsp;
    <%= link_to public_post_likes_path(post.id), method: :delete, remote: true, class: "text-decoration-none" do %>
      <i class="fas fa-thumbs-up fa-lg"></i>
    <% end %>
      <%= post.likes.count %>いいね
  <% else %>
    <%= localize post.created_at, format: :short %>&emsp;
    <%= link_to public_post_likes_path(post.id), method: :post, remote: true, class: "text-decoration-none" do %>
      <i class="far fa-thumbs-up fa-lg"></i>
    <% end %>
      <%= post.likes.count %>いいね
  <% end %>
