
  <% if post.liked_by?(current_user) %>
    <%= link_to public_post_likes_path(post.id), method: :delete, remote: true, class: "text-decoration-none" do %>
      <i class="fas fa-thumbs-up fa-2x"></i>
    <% end %>
      <%= post.likes.count %>
  <% else %>
    <%= link_to public_post_likes_path(post.id), method: :post, remote: true, class: "text-decoration-none" do %>
      <i class="far fa-thumbs-up fa-2x"></i>
    <% end %>
      <%= post.likes.count %>
  <% end %>
