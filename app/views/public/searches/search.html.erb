<!--検索対象モデルがUserの時 -->
<table class="table table-hover table-inverse">
  <% if @range == "ユーザ" %>
  <h2>"<%= @word %>"の検索結果</h2>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to public_user_path(user) do %>
          <%= image_tag user.get_profile_image(50,50), class: "rounded-circle" %>
        <% end %>
      </td>
      <td><%= link_to user.name, public_user_path(user) %></td>
      <td><%= user.university %></td>
    </tr>
    <% end %>
  </tbody>
  <% else %>
  <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
  <h2>"<%= @word %>"の検索結果</h2>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to public_post_path(post) do %>
            <%= image_tag post.get_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to post.user.name, public_user_path(post.user) %></td>
        <td><%= link_to post.place, public_post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>

