<% if user_signed_in? %>
  <div class="form-control me-2" aria-label="Search">
    <%= form_with url: public_search_path, method: :get do |f| %>
      <%= f.text_field :word, :placeholder => "Search", class: "search-form" %>
      <%= f.select :range, options_for_select([['場所'], ['ユーザ']]) %>
      <%= f.select :search, options_for_select([["部分一致","partial_match"], ["完全一致","perfect_match"]]) %>
      <%= f.submit "検索", class: "search-button" %>
    <% end %>
  </div>
<% end %>