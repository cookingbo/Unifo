  <!--投稿者のプロフィール-->
 <h2><%= @user.name %>のプロフィール</h2>
  <div class="row">
    <div class="col-md-8">
      <% @posts.each do |post| %>
      <div>
        <p>
          <%= link_to admin_post_path(post) do %>
            <%= image_tag post.get_image(250,250) %>
          <% end %>
        </p>
        <p><i class="fas fa-thumbs-up fa-2x"></i>&emsp;<%= post.likes.count %></p>
        <p><%= post.place %></p>
        <p><%= post.explaination %></p>
        <p><%= render 'public/post_comments/counter', post: post %><p>
      </div>
      <% end %>
    </div>

    <!--サイドバー-->
    <div class="col-md-4">
      <%= render 'admin/users/sidebar', user: @user %>
    </div>