<h2>ユーザ一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>profile_image</th>
      <th>name</th>
      <th>University</th>
      <th>Area</th>
      <th>Country</th>
      <th>introduction</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to admin_user_path(user) do %>
          <%= image_tag user.get_profile_image(50,50) %>
        <% end %>
      </td>
      <td><%= link_to user.name, admin_user_path(user) %></td>
      <td><%= user.university %></td>
      <td><%= user.area %></td>
      <td><%= user.country_code %></td>
      <td><%= user.introduction %></td>
    </tr>
    <% end %>
  </tbody>
</table>