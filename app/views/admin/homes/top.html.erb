<h2>NEW!</h2>
<!--トップページの投稿一覧-->
<div class="row">
  <div class="col-md-8">
    <% @posts.each do |post| %>
      <div>
        <p>
          <%= link_to admin_post_path(post) do %>
            <%= image_tag post.get_image(250,250) %>
          <% end %>
        </p>
        <!--いいねカウント-->
        <p><i class="far fa-thumbs-up fa-2x"></i>&emsp;<%= post.likes.count %></p>
        <p>
          <%= link_to admin_user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(40,40) %>
            <%= post.user.name %>
          <% end %>
        </p>
        <p><%= post.place %></p>
        <p><%= post.explaination %></p>
        <p>
          <%= render 'public/post_comments/counter', post: post %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <p>タグ検索欄</p>
  </div>
</div>