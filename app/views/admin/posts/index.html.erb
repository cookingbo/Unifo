<!--管理者投稿一覧-->
<h2>投稿一覧</h2>
<div class="row">
  <table class="table table-bordered" style="table-layout:fixed;">
    <thead class="table-light text-center">
      <tr>
        <th>#</th>
        <th>名前</th>
        <th>場所</th>
        <th>内容</th>
        <th></th>
      </tr>
    </thead>
    <tbody class="text-center">
      <% @posts.each do |post| %>
      <tr class="align-middle">
        <td>
          <%= link_to admin_post_path(post) do %>
            <%= image_tag post.get_image(50,50), class: "rounded" %>
          <% end %>
        </td>
        <td><%= link_to post.user.name, admin_user_path(post.user) %></td>
        <td><%= post.place %></td>
        <td class="explaination text-break"><%= post.explaination %></td>
        <td><%= link_to "詳細", admin_post_path(post), class: "btn btn-outline-secondary" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

