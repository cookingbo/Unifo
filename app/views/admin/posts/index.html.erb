<h2>投稿一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>place</th>
      <th>explaination</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td>
        <%= link_to admin_post_path(post) do %>
          <%= image_tag post.get_image(50,50) %>
        <% end %>
      </td>
      <td><%= link_to post.user.name, admin_user_path(post.user) %></td>
      <td><%= post.place %></td>
      <td><%= post.explaination %></td>
    </tr>
    <% end %>
  </tbody>
</table>