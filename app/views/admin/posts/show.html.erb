<h2>投稿詳細</h2>
<!--投稿詳細-->
<div class="row">
  <div class="col-md-8">
    <div>
      <%= link_to admin_post_path(@post) do %>
        <%= image_tag @post.get_image(250,250) %>
      <% end %>
      <!--いいねボタン。ログインしているときはいいねできる-->
      <p><i class="fas fa-thumbs-up fa-2x"></i>&emsp;<%= @post.likes.count %></p><!--ログインしていないときはいいねカウントのみ-->
      <p>
        <%= link_to admin_user_path(@post.user) do %>
          <%= image_tag @post.user.get_profile_image(30,30), class: "rounded-circle" %>
          <%= @post.user.name %>
        <% end %>
      </p>
      <p><%= @post.place %></p>
      <p><%= @post.explaination %></p>
    </div>
    <!--コメント数-->
    <div class="post_comments-counter">
      <%= render 'public/post_comments/counter', post: @post %>
    </div>
    <!--コメント一覧-->
    <div id="comments_area">
      <%= render 'public/post_comments/post_comments', post: @post %>
    </div>
  </div>
</div>