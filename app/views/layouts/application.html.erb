<!DOCTYPE html>
<html>
  <head>
    <title>Unifo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/b8fe928839.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <% if user_signed_in? %>
            <li>
              <%= link_to "トップ", "/" %>
            </li>
            <li>
              <%= link_to "マイページ", public_user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to "新規投稿", new_public_post_path %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          <% elsif admin_signed_in? %>
            <li>
              <%= link_to "投稿一覧", admin_posts_path %>
            </li>
            <li>
              <%= link_to "会員一覧", admin_users_path %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "ホーム", "/" %>
            </li>
            <li>
              <%= link_to "About", about_path %>
            </li>
            <li>
              <%= link_to "Sign up", new_user_registration_path %>
            </li>
            <li>
              <%= link_to "Log in", new_user_session_path %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
